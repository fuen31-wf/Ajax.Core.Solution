@{
    ViewData["Title"] = "AutoComplete";
}
@section Styles{
    <style>
        li:hover {
            background-color: #0d6efd;
            color: #f8f9fa;
        }
    </style>
}

<h1>AutoComplete</h1>

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <input type="text" id="keyword" class="form-control" />
        <ul class="list-group mt-1">
            @* <li class="list-group-item active" aria-current="true">An active item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>
            <li class="list-group-item">A fourth item</li>
            <li class="list-group-item">And a fifth one</li> *@
        </ul>
    </div>
    <div class="col-4"></div>
</div>

@section Scripts{
    <script>
        const keyword = document.querySelector("#keyword");
        const listGroup = document.querySelector(".list-group");

        keyword.addEventListener("input", async (ev) => {
            const value = ev.target.value.trim();
            if (value.length > 0) {
                const url = `@Url.Content("~/api/spotTitle")?keyword=${value}`;
                const response = await fetch(url);
                const data = await response.json();
                const items = data.map(title => `<li class="list-group-item" onclick="clickHandler('${title}')">${title}</li>`).join("");
                listGroup.innerHTML = items;
            } else {
                listGroup.innerHTML = "";
            }
        })

        const clickHandler = (title) => {
            keyword.value = title;
            listGroup.innerHTML = "";
        }
    </script>
}


